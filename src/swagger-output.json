            "example": "RASCUNHO",
            "enum": [
              "EM_ABERTO",
              "AGUARDANDO_PAGAMENTO",
              "RECEBIDO",
              "EM_PREPARACAO",
              "PRONTO",
              "FINALIZADO",
              "CANCELADO"
            ]
          },
          {
            "name": "page",
            "in": "query",
            "description": "Página",
            "required": false,
            "type": "integer",
            "example": 1,
            "default": 1
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limite de registros por página",
            "required": false,
            "type": "integer",
